{
  "private": true,
  "scripts": {
    "start": "node_modules/.bin/browser-sync start --server ../../src --no-notify --no-ui --cwd src --files *.html,styles/*",
    "test": "node_modules/.bin/editorconfig-checker",
    "html-flexbox": "node_modules/.bin/html-minifier --remove-comments --collapse-whitespace --input-dir src/flexbox --output-dir dist/flexbox --file-ext html\"",
    "html-grid": "node_modules/.bin/html-minifier --remove-comments --collapse-whitespace --input-dir src/grid --output-dir dist/grid --file-ext html",
    "html": "npm run -s html-flexbox && npm run -s html-grid",
    "styles-flexbox": "node_modules/.bin/postcss  src/flexbox/styles/*.css --use postcss-import --use postcss-csso --no-map --dir dist/flexbox/styles/",
    "styles-grid": "node_modules/.bin/postcss  src/grid/styles/*.css --use postcss-import --use postcss-csso --no-map --dir dist/grid/styles/",
    "styles": "npm run -s styles-flexbox && npm run -s styles-grid",
    "images-flexbox": "node_modules/.bin/copyfiles -f src/flexbox/img/* dist/flexbox/img",
    "images-grid": "node_modules/.bin/copyfiles -f src/grid/img/* dist/grid/img",
    "images": "npm run -s images-flexbox && npm run -s images-grid",
    "build": "npm run html && npm run styles && npm run images",
    "serve": "node_modules/.bin/serve src",
    "validateScript": "npm run test"
  },
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "copyfiles": "^2.4.1",
    "editorconfig-checker": "^3.1.0",
    "html-minifier": "^4.0.0",
    "node-w3c-validator": "^2.0.1",
    "postcss-cli": "^7.1.1",
    "postcss-csso": "^4.0.0",
    "postcss-import": "^12.0.1"
  },
  "dependencies": {
    "serve": "^13.0.2"
  }
}
